<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rellayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:numColumns="4"
    android:horizontalSpacing="10dp"
    android:verticalSpacing="10dp"
    android:columnWidth="50dp"
    android:stretchMode="columnWidth"
    android:layout_gravity="start"
    tools:context=".MenuActivity1"
    android:columnCount="6"
    android:rowCount="9"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#30FFFF00">

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp">

    </GridView>
    <GridView
        android:id="@+id/gridview2"
        android:layout_toRightOf="@+id/gridview1"
        android:layout_alignTop="@+id/gridview1"
        android:layout_width="135dp"
        android:layout_height="90dp">

    </GridView>

    <GridView
        android:id="@+id/gridview3"
        android:layout_toRightOf="@+id/gridview2"
        android:layout_alignTop="@+id/gridview1"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <GridView
        android:id="@+id/gridview4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/gridview1"
        android:layout_alignParentStart="true" />
    <GridView
        android:id="@+id/gridview5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/gridview4"
        android:layout_alignTop="@+id/gridview4"
        android:background="@color/colorYellow"/>

    <GridView
        android:id="@+id/gridview6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/gridview5"
        android:layout_alignTop="@+id/gridview4"
        android:background="@color/colorYellow"/>

    <GridView
        android:id="@+id/gridview7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/gridview6"
        android:layout_alignTop="@+id/gridview4"
        android:background="@color/colorLightOrange"/>

    <GridView
        android:id="@+id/gridview8"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_below="@+id/gridview4" />

    <GridView
        android:id="@+id/gridview9"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview8"
        android:layout_toRightOf="@+id/gridview8"
        android:background="@color/colorLightOrange"/>

    <GridView
        android:id="@+id/gridview10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview8"
        android:layout_toRightOf="@+id/gridview9"
        android:background="@color/colorYellow"/>

    <GridView
        android:id="@+id/gridview11"
        android:layout_below="@+id/gridview8"
        android:layout_width="135dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview12"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview11"
        android:layout_toRightOf="@+id/gridview11"
        android:background="@color/colorLightOrange"/>

    <GridView
        android:id="@+id/gridview13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview11"
        android:layout_toRightOf="@+id/gridview12"
        android:background="@color/colorYellow"/>

    <GridView
        android:id="@+id/gridview14"
        android:layout_below="@+id/gridview11"
        android:layout_width="135dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview15"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview14"
        android:layout_toRightOf="@+id/gridview14"
        android:background="@color/colorYellow"/>

    <GridView
        android:id="@+id/gridview16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/gridview14"
        android:layout_toRightOf="@+id/gridview15"
        android:background="@color/colorYellow"/>
</RelativeLayout>