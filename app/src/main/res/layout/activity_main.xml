<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:numColumns="4"
    android:horizontalSpacing="10dp"
    android:verticalSpacing="10dp"
    android:columnWidth="50dp"
    android:stretchMode="columnWidth"
    android:layout_gravity="start"
    tools:context="com.example.perfectmenu.MainActivity"
    android:columnCount="6"
    android:rowCount="6">

    <GridView
        android:id="@+id/gridview1"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="90dp"
        android:layout_height="90dp">

    </GridView>
    <GridView
        android:id="@+id/gridview2"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="90dp"
        android:layout_height="90dp">

    </GridView>

    <GridView
        android:id="@+id/gridview3"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview4"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview5"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview6"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_rowSpan="2"
        android:layout_columnSpan="2" />

    <GridView
        android:id="@+id/gridview7"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview8"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview9"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview10"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview11"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview12"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview13"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview14"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview15"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview16"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <GridView
        android:id="@+id/gridview17"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_width="90dp"
        android:layout_height="90dp" />
</GridLayout>
